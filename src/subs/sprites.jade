  script.
    var iconElements = document.getElementsByClassName('icon'),
        switchOn = "_on",
        activeOn = "active";
    
    var checkElement = function(element) {
      if(element.classList.contains(activeOn)) {
          turnOn(element);
      }
    };
     
    var switchOnOff = function(element, listingInParent) {
      var icon = element.getElementsByTagName('use')[0],
          iconAttribute = icon.getAttributeNS('http://www.w3.org/1999/xlink', 'href');
      if(element.classList.contains(activeOn)) {
        if(listingInParent === null) {
          turnOff(element);
        }
      }
      else {
        if(listingInParent !== null) {
          [].forEach.call(listingInParent, function(eachElement) {
            turnOff(eachElement);
          });
        }
        turnOn(element);
      }
    };
    
    var turnOff = function(element) {
      turnSwitch(element, false);
    }
    
    var turnOn = function(element) {
      turnSwitch(element, true);
    }
    
    var turnSwitch = function(element, isToTurnOn) {
      var icon = element.getElementsByTagName('use')[0],
          iconAttribute = icon.getAttributeNS('http://www.w3.org/1999/xlink', 'href');
          
      if(isToTurnOn) {
        element.classList.add(activeOn);
        icon.setAttributeNS('http://www.w3.org/1999/xlink', 'href', iconAttribute + switchOn);
      }
      else {  
        if(element.classList.contains(activeOn)) {
          iconAttribute = iconAttribute.substring(0, iconAttribute.length - switchOn.length);
          element.classList.remove(activeOn);
          icon.setAttributeNS('http://www.w3.org/1999/xlink', 'href', iconAttribute);
        }
      }
    };
    
    [].forEach.call(iconElements, function(element) {
      
      var isIconListing = element.parentNode.classList.contains('icon-listing');
      
      element.addEventListener('click', function() {
        switchOnOff(this, (isIconListing? element.parentNode.getElementsByClassName('icon'): null));
      });
      checkElement(element);
    });
    
    
