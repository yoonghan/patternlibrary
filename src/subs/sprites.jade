    style.
      .icon-listing-center {
        background: #045;
      }
      .icon-listing {
        display: table;
        margin:auto;
      }
      .icon-listing > .icon {
        display: table-cell;
        border-left: 1px solid #fff;
      }
      .icon-listing > .icon:last-child {
        border-right: 1px solid #fff;
      }
      @media screen and (max-width: 320px) {
        .icon{
          width: 100px;
        }
      }
      .icon {
        background: #045;
        color: #aaa;
        font-family: 'Lato', sans-serif;
        font-size: 12pt;
        height: 70px;
        width: 200px;
        padding: 10px 10px 15px 10px;
      }
      .icon:hover {
        cursor: hand;
        color: #fff;
      }
      .icon > svg {
        height:50px;
        width: inherit;
      }
      .icon > div {      
        text-align: center;
        font-weight: bold;
        padding: 5px 0;
      }
      .icon-listing > .icon.active {
        padding: 8px 8px 13px 8px;
        border: 2px solid #fff;
      }
      .icon.active > div {
        color: #fff;
      }
      svg.hide {
        display: none;
        visibility: hidden;
      }
